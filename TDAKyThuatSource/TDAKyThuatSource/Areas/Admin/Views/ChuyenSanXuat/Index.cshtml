
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout_master.cshtml";
}

<!-- content-wrapper ends -->
<div class="main-panel">
    <div class="card">
        <div class="card-header text-dark">
            Chuyền Sản Xuất
            <div class="ml-auto d-inline float-right">
                <button type="button" class="btn btn-primary btn-sm ml-auto" data-toggle="modal"
                        data-target="#addChuyen">
                    Tạo mới
                </button>
            </div>

            <!-- add -->
            <div bsmodal #modaladd="bs-modal" class="modal fade" id="addChuyen" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Tạo Mới</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group row">
                                    <label for="chooseCongTy" class="col-sm-3 col-form-label">Công Ty</label>
                                    <div class="col-sm-9">
                                        <select name="chooseCongTy" id="chooseCongTy" class="form-control">
                                            <option>TDA.TSC</option>
                                            <option>TDA.TDM</option>
                                            <option>TDA.DN</option>
                                            <option>TDA.BN</option>
                                            <option>TDA.LA</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="addChuyen" class="col-sm-3 col-form-label">Tên Chuyền</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="addChuyen"
                                               placeholder="Vui lòng nhập tên chuyền sản xuất">
                                    </div>
                                </div>
                                <div class="text-block text-center my-3">
                                    <p class="text-danger">{{message}}</p>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-success" data-dismiss="modal">Add</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- edit -->
            <div bsmodal #modaledit="bs-modal" class="modal fade" id="editChuyen" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Chỉnh Sửa</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group row">
                                    <label for="chooseCongTy" class="col-sm-3 col-form-label">Công Ty</label>
                                    <div class="col-sm-9">
                                        <select name="chooseCongTy" id="chooseCongTy" class="form-control">
                                            <option>TDA.TSC</option>
                                            <option>TDA.TDM</option>
                                            <option>TDA.DN</option>
                                            <option>TDA.BN</option>
                                            <option>TDA.LA</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="editChuyen" class="col-sm-3 col-form-label">Tên Chuyền</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="editChuyen"
                                               placeholder="Vui lòng nhập tên chuyền sản xuất">
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Update</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- delete -->
            <div bsmodal #modaldelete="bs-modal" class="modal fade" id="deleteChuyen" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Xóa</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group row">
                                    <label for="chooseCongTy" class="col-sm-3 col-form-label">Công Ty</label>
                                    <div class="col-sm-9">
                                        <select name="chooseCongTy" id="chooseCongTy" class="form-control" disabled>
                                            <option>TDA.TSC</option>
                                            <option>TDA.TDM</option>
                                            <option>TDA.DN</option>
                                            <option>TDA.BN</option>
                                            <option>TDA.LA</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="deleteChuyen" class="col-sm-3 col-form-label">Tên Chuyền</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="deleteChuyen"
                                               placeholder="Vui lòng nhập tên chuyền sản xuất" readonly>
                                    </div>
                                </div>
                            </form>
                            <p class="text-danger">Bạn có chắc chắn muốn xóa Chuyền Sản Xuất này không?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Details -->
            <div bsmodal #modaldetail="bs-modal" class="modal fade" id="detailChuyen" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Chi Tiết Cụm</h5>
                            <button type="button" class="close" (click)="close()" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group row">
                                    <label for="chooseCongTy" class="col-sm-3 col-form-label">Công Ty</label>
                                    <div class="col-sm-9">
                                        <select name="chooseCongTy" id="chooseCongTy" class="form-control">
                                            <option>TDA.TSC</option>
                                            <option>TDA.TDM</option>
                                            <option>TDA.DN</option>
                                            <option>TDA.BN</option>
                                            <option>TDA.LA</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="detailChuyen" class="col-sm-3 col-form-label">Tên Chuyền</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="detailChuyen"
                                               placeholder="Vui lòng nhập tên chuyền sản xuất">
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal"
                                    (click)="close()">
                                Close
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body table-responsive">
            <table datatable class="table table-striped table-hover display">
                <thead class="bg-color text-white">
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Công Ty</th>
                        <th scope="col">Tên Chuyền</th>
                        <th scope="col">Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>TDA.TSC</td>
                        <td>Chuyền Màu 1(CM1)</td>
                        <td>
                            <a href="#" class="text-warning" data-toggle="modal" data-target="#editChuyen">Sửa</a>
                            | <a href="#" class="text-danger" data-toggle="modal" data-target="#deleteChuyen">Xóa</a>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>TDA.TSC</td>
                        <td>Chuyền Kẽm 1(CK1)</td>
                        <td>
                            <a href="#" class="text-warning" data-toggle="modal" data-target="#editChuyen">Sửa</a>
                            | <a href="#" class="text-danger" data-toggle="modal" data-target="#deleteChuyen">Xóa</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div>
        <div class="ml-auto d-inline float-left">
            <a href="#">Quay lại</a>
        </div>
        <div class="ml-auto d-inline float-right">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
<!-- page-body-wrapper ends -->

