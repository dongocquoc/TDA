
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout_master.cshtml";
}

<!-- content-wrapper ends -->
<div class="main-panel">
    <div class="card">
        <div class="card-header text-dark">
            Lịch Sử Thiết Bị
            <div class="ml-auto d-inline float-right">
                <button type="button" class="btn btn-primary btn-sm ml-auto" data-toggle="modal"
                        data-target="#addLSThietBi">
                    Tạo mới
                </button>
            </div>

            <!-- add -->
            <div bsmodal #modaladd="bs-modal" class="modal fade" id="addLSThietBi" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Tạo Mới</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="chooseCumThietBi">Cụm Thiết Bị</label>
                                    <select name="chooseCumThietBi" id="chooseCumThietBi" class="form-control">
                                        <option>Cụm abc</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="NgayThang">Ngày Tháng</label>
                                    <div class="input-group mb-2">
                                        <input type="date" class="form-control" id="NgayThang" name="NgayThang">
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="SuCo">Nội Dung Sự Cố</label>
                                    <textarea class="form-control" id="SuCo" rows="3"></textarea>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="KhacPhuc">Cách Khắc Phục</label>
                                    <textarea class="form-control" id="KhacPhuc" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md">
                                    <label for="GhiChu">Ghi Chú</label>
                                    <textarea class="form-control" id="GhiChu" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                        <label class="form-check-label text-danger" for="defaultCheck1">
                                            Sự Cố
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="text-block text-center my-3">
                                <p class="text-danger">{{message}}</p>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-success" data-dismiss="modal">Add</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- edit -->
            <div bsmodal #modaledit="bs-modal" class="modal fade" id="editLSThietBi" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Chỉnh Sửa</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="chooseCumThietBi">Cụm Thiết Bị</label>
                                    <select name="chooseCumThietBi" id="chooseCumThietBi" class="form-control">
                                        <option>Cụm abc</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="NgayThang">Ngày Tháng</label>
                                    <div class="input-group mb-2">
                                        <input type="date" class="form-control" id="NgayThang" name="NgayThang">
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="SuCo">Nội Dung Sự Cố</label>
                                    <textarea class="form-control" id="SuCo" rows="3"></textarea>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="KhacPhuc">Cách Khắc Phục</label>
                                    <textarea class="form-control" id="KhacPhuc" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md">
                                    <label for="GhiChu">Ghi Chú</label>
                                    <textarea class="form-control" id="GhiChu" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck2">
                                        <label class="form-check-label text-danger" for="defaultCheck2">
                                            Sự Cố
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Update</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- delete -->
            <div bsmodal #modaldelete="bs-modal" class="modal fade" id="deleteLSThietBi" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Xóa</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="chooseCumThietBi">Cụm Thiết Bị</label>
                                    <select name="chooseCumThietBi" id="chooseCumThietBi" class="form-control" disabled>
                                        <option>Cụm abc</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="NgayThang">Ngày Tháng</label>
                                    <div class="input-group mb-2">
                                        <input type="date" class="form-control" id="NgayThang" name="NgayThang" readonly>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="SuCo">Nội Dung Sự Cố</label>
                                    <textarea class="form-control" id="SuCo" rows="3" readonly></textarea>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="KhacPhuc">Cách Khắc Phục</label>
                                    <textarea class="form-control" id="KhacPhuc" rows="3" readonly></textarea>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md">
                                    <label for="GhiChu">Ghi Chú</label>
                                    <textarea class="form-control" id="GhiChu" rows="3" readonly></textarea>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" disabled>
                                        <label class="form-check-label text-danger" for="defaultCheck1">
                                            Sự Cố
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <p class="text-danger">Bạn có chắc chắn muốn xóa Lịch Sử Thiết Bị này không?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Details -->
            <div bsmodal #modaldetail="bs-modal" class="modal fade" id="detailLSThietBi" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Detail Year</h5>
                            <button type="button" class="close" (click)="close()" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="chooseCumThietBi">Cụm Thiết Bị</label>
                                    <select name="chooseCumThietBi" id="chooseCumThietBi" class="form-control">
                                        <option>Cụm abc</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="NgayThang">Ngày Tháng</label>
                                    <input type="text" name="NgayThang" class="form-control mb-2">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="SuCo">Nội Dung Sự Cố</label>
                                    <input type="text" class="form-control mb-2" name="SuCo">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="KhacPhuc">Cách Khắc Phục</label>
                                    <input type="text" name="KhacPhuc" class="form-control mb-2">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="GhiChu">Ghi Chú</label>
                                    <input type="text" name="GhiChu" class="form-control mb-2">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="SuCo">Sự Cố</label>
                                    <input type="text" name="SuCo" class="form-control mb-2">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal"
                                    (click)="close()">
                                Close
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body table-responsive">
            <table datatable class="table table-striped table-hover display">
                <thead class="bg-color text-white">
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Cụm Thiết Bị</th>
                        <th scope="col">Ngày Tháng</th>
                        <th scope="col">Nội Dung Sự Cố</th>
                        <th scope="col">Cách Khắc Phục</th>
                        <th scope="col">Ghi Chú</th>
                        <th scope="col">Sự Cố</th>
                        <th scope="col">Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Cụm abc</td>
                        <td>20/07/2020</td>
                        <td>Cháy động cơ</td>
                        <td>Thay động cơ mới</td>
                        <td>None</td>
                        <td>Y</td>
                        <td>
                            <a href="#" class="text-warning" data-toggle="modal" data-target="#editLSThietBi">Sửa</a>
                            | <a href="#" class="text-danger" data-toggle="modal" data-target="#deleteLSThietBi">Xóa</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div>
        <div class="ml-auto d-inline float-left">
            <a href="#">Quay lại</a>
