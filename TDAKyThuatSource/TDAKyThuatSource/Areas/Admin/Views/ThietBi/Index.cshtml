
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout_master.cshtml";
}

<!-- content-wrapper ends -->
<div class="main-panel">
    <div class="card">
        <div class="card-header text-dark">
            Thiết Bị
            <div class="ml-auto d-inline float-right">
                <button type="button" class="btn btn-primary btn-sm ml-auto" data-toggle="modal"
                        data-target="#addThietBi">
                    Add
                </button>
            </div>

            <!-- add -->
            <div bsmodal #modaladd="bs-modal" class="modal fade" id="addThietBi" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Tạo Mới</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group row">
                                    <label for="chooseChuyen" class="col-sm-3 col-form-label">Tên Chuyền</label>
                                    <div class="col-sm-9">
                                        <select name="chooseChuyen" id="chooseChuyen" class="form-control">
                                            <option>Chuyền Màu 1(CM1)</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="addThietBi" class="col-sm-3 col-form-label">Tên Thiết Bị</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="addThietBi" placeholder="Vui lòng nhập tên cụm">
                                    </div>
                                </div>
                                <div class="text-block text-center my-3">
                                    <p class="text-danger">{{message}}</p>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-success" data-dismiss="modal">Add</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- edit -->
            <div bsmodal #modaledit="bs-modal" class="modal fade" id="editThietBi" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Chỉnh Sửa</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group row">
                                    <label for="chooseChuyen" class="col-sm-3 col-form-label">Tên Chuyền</label>
                                    <div class="col-sm-9">
                                        <select name="chooseChuyen" id="chooseChuyen" class="form-control">
                                            <option>Chuyền Màu 1(CM1)</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="editThietBi" class="col-sm-3 col-form-label">Tên Thiết Bị</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="editThietBi" placeholder="Vui lòng nhập tên cụm">
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Update</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- delete -->
            <div bsmodal #modaldelete="bs-modal" class="modal fade" id="deleteThietBi" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Xóa</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group row">
                                    <label for="chooseChuyen" class="col-sm-3 col-form-label">Tên Chuyền</label>
                                    <div class="col-sm-9">
                                        <select name="chooseChuyen" id="chooseChuyen" class="form-control" disabled>
                                            <option>Chuyền Màu 1(CM1)</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="deleteThietBi" class="col-sm-3 col-form-label">Tên Thiết Bị</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="deleteThietBi" placeholder="Vui lòng nhập tên cụm" readonly>
                                    </div>
                                </div>
                            </form>
                            <p class="text-danger">Bạn có chắc chắn muốn xóa Thiết Bị này không?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Details -->
            <div bsmodal #modaldetail="bs-modal" class="modal fade" id="detailThietBi" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Chi Tiết Cụm</h5>
                            <button type="button" class="close" (click)="close()" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group row">
                                    <label for="chooseChuyen" class="col-sm-3 col-form-label">Tên Chuyền</label>
                                    <div class="col-sm-9">
                                        <select name="chooseChuyen" id="chooseChuyen" class="form-control">
                                            <option>Chuyền Màu 1(CM1)</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="detailThietBi" class="col-sm-3 col-form-label">Tên Thiết Bị</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="detailThietBi" placeholder="Vui lòng nhập tên cụm">
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal"
                                    (click)="close()">
                                Close
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body table-responsive">
            <table datatable class="table table-striped table-hover display">
                <thead class="bg-color text-white">
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Tên Chuyền</th>
                        <th scope="col">Tên Thiết Bị</th>
                        <th scope="col">Liên Kết</th>
                        <th scope="col">Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Chuyền Màu 1(CM1)</td>
                        <td>Thiết bị abc</td>
                        <td><a href="TDA.Cum.html">Xem Cụm Thiết Bị</a></td>
                        <td>
                            <a href="#" class="text-warning" data-toggle="modal" data-target="#editThietBi">Sửa</a>
                            | <a href="#" class="text-danger" data-toggle="modal" data-target="#deleteThietBi">Xóa</a>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Chuyền Kẽm 1(CK1)</td>
                        <td>Thiết bị xyz</td>
                        <td><a href="TDA.Cum.html">Xem Cụm Thiết Bị</a></td>
                        <td>
                            <a href="#" class="text-warning" data-toggle="modal" data-target="#editThietBi">Sửa</a>
                            | <a href="#" class="text-danger" data-toggle="modal" data-target="#deleteThietBi">Xóa</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div>
        <div class="ml-auto d-inline float-left">
            <a href="#">Quay lại</a>
        </div>
        <div class="ml-auto d-inline float-right">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
<!-- page-body-wrapper ends -->

